<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/guestLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/bg_waiting"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/waiting"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/waiting_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />

            <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/addWaitingNumberFloatingActionButton"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--app:fabSize="mini"-->
                <!--android:background="@color/bg_waiting"-->
                <!--android:clickable="true"-->
                <!--android:focusable="true"-->
                <!--app:srcCompat="@drawable/ic_add_circle_black_24px" />-->

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/bg_dining"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/dining"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/dining_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/bg_cancelled"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/cancelled"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/cancelled_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@color/bg_completed"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/completed"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/completed_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/noGuest"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:layout_margin="3dp"
        android:text="@string/no_guest"
        android:textSize="18sp"
        android:visibility="invisible" />

</LinearLayout>